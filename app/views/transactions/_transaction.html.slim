article.transaction
  .from_user
    .image= transaction.from_user.display_image
    h5= link_to transaction.from_user.name, user_by_permalink_path(transaction.from_user)
  .value
    = "#{t('transfered').downcase} "
    span.number= transaction.value
    = " sistÃªmicos #{t('to'.downcase)} "
  .to_user
    .image= transaction.to_user.display_image
    h5= link_to transaction.to_user.name, user_by_permalink_path(transaction.to_user)
  .description= transaction.description
  .status= transaction.human_state_name
  - if defined?(show_events) && show_events
    - if transaction.can_approve?
      = link_to t('activerecord.state_machines.transaction.state.events.approve'), approve_transaction_path(transaction), method: :put, class: 'button'
    - if transaction.can_reject?
      = link_to t('activerecord.state_machines.transaction.state.events.reject'), reject_transaction_path(transaction), method: :put, class: 'button reject'
